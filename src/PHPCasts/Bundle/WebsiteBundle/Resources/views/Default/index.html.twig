{% extends 'PHPCastsWebsiteBundle:Layout:base.html.twig' %}

{% block bigHeader %}
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
        <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active presentation presentation-1">
            <div class="text">
                <h2>Relevant content</h2>
                <h3>Submit a screencast proposal for the <br />community to vote and we'll record it!</h3>
                <a class="btn btn-danger btn-lg" href="{{ path('php_casts_website_proposal_create') }}"><i class="fa fa-cloud-upload fa-fw"></i> {{ 'phpcasts.website.navigation.submitProposal'|trans }}</a>
            </div>
        </div>
        <div class="item presentation presentation-2">
            <div class="text">
                <h2>Community decides</h2>
                <h3>If other people like your proposal <br />and vote for it, we'll record it!</h3>
                <a class="btn btn-danger btn-lg" href="{{ path('php_casts_website_proposal_list') }}"><i class="fa fa-sort-amount-desc fa-fw"></i> {{ 'phpcasts.website.navigation.viewSubmissions'|trans }}</a>
            </div>
        </div>
        <div class="item presentation presentation-3">
            <div class="text">
                <h2>We record and publish!</h2>
                <h3>When a screencast proposal reach a pre-defined <br />amount of votes, we record and publish it</h3>
                <a class="btn btn-danger btn-lg" href="{{ path('php_casts_website_screencast_list') }}"><i class="fa fa fa-video-camera fa-fw"></i> {{ 'phpcasts.website.navigation.viewPublishedScreencasts'|trans }}</a>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
{% endblock %}

{% block content %}
    <div class="col-md-6">
        <h3><i class="fa fa-twitter-square"></i> {{ 'phpcasts.website.home.latestTweets'|trans }}</h3>
        <a class="twitter-timeline" href="https://twitter.com/phpcasts" data-widget-id="435976027840315393">Tweets by @phpcasts</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </div>
{% endblock content %}